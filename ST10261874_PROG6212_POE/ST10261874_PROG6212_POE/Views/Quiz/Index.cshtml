@model List<ST10261874_PROG6212_POE.Models.QuizQuestion>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Cybersecurity Quiz</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: white;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: deepskyblue;
            padding: 20px;
            border-radius: 10px; 
            color: white; 
        }

        h1 {
            text-align: center;
            color: white; 
            margin-bottom: 30px;
        }

        .question-card {
            margin-bottom: 20px;
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
        }

        .card-title {
            color: white; 
        }

        .form-check-label {
            color: white;
        }

        .btn {
            margin-top: 20px; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Cybersecurity Quiz</h1>
        <form asp-action="SubmitQuiz" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="card question-card">
                    <div class="card-body">
                        <h5 class="card-title">Question @Model[i].Id:</h5>
                        <p class="card-text">@Model[i].Question</p>
                        <div class="options">
                            @for (int j = 0; j < Model[i].Options.Length; j++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="userAnswers[@i]" value="@j" required />
                                    <label class="form-check-label">@Model[i].Options[j]</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            <button type="submit" class="btn btn-light btn-block">Submit Quiz</button>
        </form>
    </div>
</body>
</html>
